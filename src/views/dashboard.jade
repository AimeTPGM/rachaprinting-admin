div(ng-include="templates.moreInfo")
div.dashboard-wrapper
  div.header
    | {{topic}}
  div.content-wrapper
    div.table-wrapper
      div.table
        div.table-header-wrapper
          div.table-header(ng-click="orderBy('id', 'sortByID')")
            div.content
              | หมายเลขออเดอร์
            div.sort-icon#sortByID
              i.fa.fa-caret-down
          div.table-header
            | ลูกค้า
          div.table-header(ng-click="orderBy('detail.product.id', 'sortByProduct')")
            div.content
              | สิ่งพิมพ์
            div.sort-icon#sortByProduct
              i.fa.fa-caret-down
          div.table-header(ng-click="orderBy('detail.quantity', 'sortByQuantity')")
            div.content
              | จำนวน
            div.sort-icon#sortByQuantity
              i.fa.fa-caret-down
          div.table-header(ng-click="orderBy('detail.deliveryDate', 'sortByDelivery')")
            div.content
              | วันที่จัดส่ง
            div.sort-icon#sortByDelivery
              i.fa.fa-caret-down
          div.table-header(ng-click="orderBy('detail.status', 'sortByStatus')")
            div.content
              | สถานะ
            div.sort-icon#sortByStatus
              i.fa.fa-caret-down
          div.table-header
            | ข้อมูลเพิ่มเติม
        div.table-content-wrapper(ng-repeat="order in orders | orderBy:customOrderBy")
          div.table-content
            | {{order.id}}
          div.table-content.customer
            div.name
              | {{order.customer.name}}
            div.phone
              | {{order.customer.phone}}
            div.email
              | {{order.customer.email}}
          div.table-content
            | {{order.detail.product.name}}
          div.table-content
            | {{order.detail.quantity}}
          div.table-content
            | {{order.detail.deliveryDate}}
          div.table-content.new-elem(ng-if="order.detail.status == orderStatus.waiting")
            | {{order.detail.status}}
          div.table-content.in-progress-elem(ng-if="order.detail.status == orderStatus.confirm")
            | {{order.detail.status}}
          div.table-content.common-elem(ng-if="order.detail.status == orderStatus.done")
            | {{order.detail.status}}
          div.table-content.more-info
              div.icon
                i.fa.fa-file-o
